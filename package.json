{
  "name": "whatsapp-group-creator",
  "version": "2.0.0",
  "description": "Advanced WhatsApp Group Creator with Egyptian phone number validation and bulk contact management",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "jest",
    "lint": "eslint src/ --ext .js",
    "format": "prettier --write src/"
  },
  "keywords": [
    "whatsapp",
    "group",
    "creator",
    "egypt",
    "phone-validation",
    "bulk-contacts",
    "electron"
  ],
  "author": {
    "name": "George Sadek",
    "email": "your-email@example.com",
    "url": "https://github.com/GeorgeSadek01"
  },
  "license": "MIT",
  "homepage": "https://github.com/GeorgeSadek01/whatsapp-group-creator",
  "repository": {
    "type": "git",
    "url": "https://github.com/GeorgeSadek01/whatsapp-group-creator.git"
  },
  "bugs": {
    "url": "https://github.com/GeorgeSadek01/whatsapp-group-creator/issues"
  },
  "build": {
    "appId": "com.georgesadek.whatsapp-group-creator",
    "productName": "WhatsApp Group Creator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "index.html",
      "index.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "csv-parser": "^3.2.0",
    "qrcode": "^1.5.4",
    "whatsapp-web.js": "^1.34.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
